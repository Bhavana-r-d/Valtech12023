<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID">
	<display-name>firstWeb</display-name>
	<filter>
	<filter-name>CounterFilter</filter-name>
	<filter-class>firstWeb.CounterFilter</filter-class>
	</filter>
	
	<filter-mapping>
	<filter-name>CounterFilter</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
	<listener-class>firstWeb.CounterLoaderListener</listener-class>
	</listener>
	
	
	<servlet>
		<servlet-name>helloServlet</servlet-name>
		<servlet-class>firstWeb.HelloServlet</servlet-class>
		<init-param>
			<param-name>driver-class</param-name>
			<param-value>com.jdbc.mysql.Driver</param-value>
		</init-param>
		
		<init-param>
			<param-name>jdbc-url</param-name>
			<param-value>jdbc:mysql://localhost:3306/valtech2023</param-value>
		</init-param>
		
		<init-param>
			<param-name>username</param-name>
			<param-value>root</param-value>
		</init-param>
		
		<init-param>
			<param-name>password</param-name>
			<param-value>root</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
	<servlet-name>EmployeeServlet</servlet-name>
	<servlet-class>firstWeb.EmployeeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>EmployeeServle</servlet-name>
		<url-pattern>/empCtrl</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>DepartmentServlet</servlet-name>
	<servlet-class>firstWeb.DepartmentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DepartmentServlet</servlet-name>
		<url-pattern>/deptCtrl</url-pattern>
	</servlet-mapping>
	
	

	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hii</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>firstWeb.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
